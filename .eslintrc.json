{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json", "./tsconfig.node.json"]
  },
  "plugins": ["react-refresh"],
  "rules": {
    "react-refresh/only-export-components": [
      "warn",
      { "allowConstantExport": true }
    ],
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-unused-expressions": "warn",
    "@typescript-eslint/ban-ts-comment": "error"
  },
  "ignorePatterns": ["dist", "node_modules", "*.js", "*.cjs", "backup-old-implementation"],
  "overrides": [
    {
      "files": ["*.config.ts", "*.config.js"],
      "parserOptions": {
        "project": "./tsconfig.node.json"
      }
    },
    {
      "files": ["tests/e2e/**/*.spec.js"],
      "parser": "espree",
      "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
      },
      "env": {
        "node": true,
        "es2022": true
      },
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "CallExpression[callee.type='MemberExpression'][callee.property.name='waitForTimeout']",
            "message": "‚ùå Avoid waitForTimeout in E2E tests. Use condition-based waits like waitForSelector(), expect().toBeVisible(), or waitForLoadState() instead. See rules/testing-guidelines.md"
          }
        ]
      }
    }
  ]
}