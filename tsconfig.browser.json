{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "outDir": "./dist-browser-ts",
    "rootDir": "./src"
  },
  "include": [
    "src/browser/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-browser",
    "src/cli",
    "src/server",
    "src/api",
    "src/utils",
    "src/storage",
    "src/web-ui/static",
    "test"
  ]
}