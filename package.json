{
  "name": "zosql",
  "version": "1.0.0",
  "description": "SQL decomposition and composition tool using CTE-based modularization",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:github": "NODE_ENV=production tsc && vite build --mode=production",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:record": "playwright codegen http://localhost:3000",
    "test:e2e:export": "playwright test --reporter=html --output-dir=exports/reports",
    "test:e2e:trace": "playwright show-trace",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:e2e": "eslint tests/e2e/**/*.spec.js --no-ignore --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "quality": "npm run typecheck && npm run lint && npm run test:run && npm run test:e2e",
    "quality:fix": "npm run lint:fix && npm run typecheck",
    "ci:essential": "npm run typecheck && npm run lint",
    "ci:check": "npm run typecheck && npm run lint && npm run test:run",
    "ci:full": "npm run typecheck && npm run lint && npm run test:run && npm run build:github"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.5",
    "@monaco-editor/react": "^4.6.0",
    "@playwright/test": "^1.54.2",
    "clsx": "^2.0.0",
    "monaco-editor": "^0.52.2",
    "rawsql-ts": "^0.11.28-beta",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.3",
    "@types/open": "^6.1.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}
